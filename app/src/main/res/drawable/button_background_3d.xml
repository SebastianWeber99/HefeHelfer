<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Extrem kräftiger Hintergrund -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" /> <!-- Extrem kräftige Hintergrundfarbe -->
        </shape>
    </item>
    <!-- Extrem kräftige Hervorhebung mit größerem Abstand -->
    <item android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#00FF00" /> <!-- Extrem kräftige Farbe der Hervorhebung -->
        </shape>
    </item>
    <!-- Extrem kräftiger Schatten mit größerem Abstand -->
    <item android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#0000FF" /> <!-- Extrem kräftige Farbe des Schattens -->
        </shape>
    </item>
</layer-list>
