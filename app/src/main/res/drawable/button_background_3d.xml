<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hintergrund -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Hintergrundfarbe -->
        </shape>
    </item>
    <!-- Hervorhebung -->
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- Farbe der Hervorhebung -->
        </shape>
    </item>
    <!-- Schatten -->
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#532010" /> <!-- Farbe des Schattens -->
        </shape>
    </item>
</layer-list>