<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:hyphenationFrequency="full">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:hyphenationFrequency="full">


        <TextView
            android:id="@+id/ueberschrfit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:hyphenationFrequency="full"
            android:minHeight="20mm"
            android:text="@string/h.Hefeberechnung"
            android:textSize="35dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="33mm"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"

            android:text="@string/h.Mehlgewicht"
            android:gravity="bottom"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="19mm"
            android:layout_height="50dp"
            android:layout_marginStart="7mm"
            android:layout_marginTop="24dp"
            android:autoSizeTextType="uniform"
            android:hint="@string/h.inGramm"
            android:inputType="numberDecimal"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="33mm"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="bottom"
            android:text="@string/h.Teigruhe"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/editText4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contentTextView1" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:layout_marginStart="7mm"
            android:layout_marginTop="25dp"
            android:hint="@string/h.h"
            android:inputType="number"
            android:textSize="22dp"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/contentTextView1" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="10mm"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:hint="@string/h.min"
            android:inputType="number"
            android:textSize="22dp"
            app:layout_constraintStart_toEndOf="@+id/editText4"
            app:layout_constraintTop_toBottomOf="@+id/contentTextView1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="33mm"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="bottom"
            android:text="@string/h.Temperatur"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/editText3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contentTextView2" />


        <EditText
            android:id="@+id/editText3"
            android:layout_width="18mm"
            android:layout_height="50dp"
            android:layout_marginStart="7mm"
            android:layout_marginTop="30dp"
            android:hint="@string/h.C"
            android:inputType="numberDecimal"
            android:textSize="22dp"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/contentTextView2" />

        <androidx.constraintlayout.utils.widget.MotionButton
            android:id="@+id/calculateButton"
            android:layout_width="58mm"
            android:layout_height="12mm"
            android:textColor="@color/white"
            android:layout_marginTop="44dp"
            android:textSize="7mm"
            android:text="@string/h.berechnen"

            android:background="@drawable/button_background_3d"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contentTextView3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="33mm"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/h.frischhefe"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calculateButton" />

        <TextView
            android:id="@+id/resultlabel"
            android:layout_width="18mm"
            android:layout_height="35dp"

            android:layout_marginStart="7mm"
            android:layout_marginTop="24dp"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/calculateButton" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="297dp"
            android:layout_marginBottom="15dp"
            android:text="@string/h.oder"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="33mm"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/h.Trockenhefe"
            android:hyphenationFrequency="full"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <TextView
            android:id="@+id/resultlabel2"
            android:layout_width="18mm"
            android:layout_height="35dp"

            android:layout_marginStart="7mm"
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="297dp"
            android:layout_marginBottom="15dp"
            android:text="@string/h.oder"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="33mm"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/h.Sauerteihg"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <TextView
            android:id="@+id/resultlabel3"
            android:layout_width="18mm"
            android:layout_height="35dp"

            android:layout_marginStart="7mm"
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="33mm"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:text="@string/h.Teigruhebeendet"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/resultlabel4"
            android:layout_width="18mm"
            android:layout_height="wrap_content"
            android:layout_marginStart="7mm"
            android:layout_marginTop="40dp"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/resultlabel5"
            android:layout_width="126dp"
            android:layout_height="35dp"
            android:layout_marginTop="32dp"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultlabel4" />

        <androidx.constraintlayout.utils.widget.MotionButton
            android:id="@+id/button3"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/button_background_3d"
            android:text="@string/Frage"
            android:textColor="@color/white"
            android:textSize="19sp"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/h.sinn"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintEnd_toStartOf="@+id/editText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ueberschrfit"
            app:layout_constraintVertical_bias="0.13" />


        <TextView
            android:id="@+id/contentTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:text="@string/h.mehlerklear"
            android:textSize="20sp"
            android:textStyle="italic"

            app:layout_constraintEnd_toStartOf="@+id/editText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/contentTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"

            android:text="@string/h.dauererkleart"
            android:textSize="20sp"
            android:textStyle="italic"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/editText4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/contentTextView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"

            android:text="@string/h.temperkleart"
            android:textSize="20sp"
            android:textStyle="italic"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/editText3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

